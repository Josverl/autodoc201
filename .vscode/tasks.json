        //     },
        //     "problemMatcher": [],
        //     "group": {
        //         "kind": "build",
        //         "isDefault": true
        //     },
        // },
        {
            "label": "make_html",
            "type": "shell",
            "command": "./make.bat",
            "args": [
                "html"
            ],
            "options": {
                "cwd": "${workspaceFolder}/docs"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "make_clean"
            ],
        },
        {
            "label": "make_clean",
            "type": "shell",
            "command": "./make.bat",
            "args": [
                "clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}/docs"
            },
            "dependsOn": [
                "delete_modules"
            ],
        },
        {
            "label": "delete_modules",
            "type": "shell",
            "command": [
                "remove-item ${workspaceFolder}/docs/modules -Recurse -Confirm:$false -EA:SilentlyContinue;",
                "remove-item ${workspaceFolder}/docs/stubs-temp -Recurse -Confirm:$false -EA:SilentlyContinue;",
                "remove-item ${workspaceFolder}/docs/_build -Recurse -Confirm:$false -EA:SilentlyContinue;",
                "echo Cleaned...",
            ]
        }
    ]
}