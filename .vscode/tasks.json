{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    //
    // basic task setup to build Sphinx documentaion on Windows with make.bat
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make_html",
            "type": "shell",
            "command": "./make.bat",
            "args": [
                "html"
            ],
            "options": {
                "cwd": "${workspaceFolder}/docs"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "make_clean",
            "type": "shell",
            "command": "./make.bat",
            "args": [
                "clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}/docs"
            },
            "dependsOn": {
                "label": "delete_modules",
            },
        },
        {
            "label": "delete_modules",
            "type": "shell",
            "command": "remove-item",
            "args": [
                "${workspaceFolder}/docs/modules",
                "-Recurse",
                "-Confirm:$false",
            ],
        }
    ]
}